<%- include('../partials/header') %>


<section>
  <h2 class="display-6 text-center text-start">Recently Played</h2>
  <div class="container">
    <div class="row justify-content-center">
      <div class="card" style="height:5rem">
        <div class="">
          <p>test</p>
        </div>
      </div>
    </div>
  </div>

  <div id="hole-carousel" class="carousel slide">
    <div class="carousel-indicators">
      <% for (let i = 0; i < course.courseScorecard.length; i++) { %>
        <button type="button" data-bs-target="#hole-carousel" data-bs-slide-to="<%= i %>" <% if (i === 0) { %>class="active" <% } %> aria-label="Hole <%= i + 1 %>"></button>
      <% } %>
    </div>
    <form id="scorecard-new" action="/scorecards" method="POST">
    <div class="carousel-inner">
      <% for (let i = 0; i < course.courseScorecard.length; i++) { %>
        <div class="carousel-item <% if (i === 0) { %> active <% } %>">
          <div class="container">
            <div class="row justify-content-center">
              <div class="card" style="height:25rem;">
                <h6 class="card-header">Hole <%= course.courseScorecard[i].hole %> - Par <%= course.courseScorecard[i].par %> - Yardage <%= course.courseScorecard[i].yardage %></h6>
                <div class="card-body">
                  <div class="container">
                    <div class="score-name">
                      <h4>Score</h4>
                      <button id="subtractFromScore" onclick="subtractFromScore()"> - </button>
                      <input name="scorecard.score[<%i%>]" id="hole-score" type="text" value="<%= course.courseScorecard[i].par %>" min="0" max="10">
                      
                      <button id="addToScore" onclick="addToScore()" onchange=""> + </button>
                      <% console.log() %>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      <% } %>
    </div>

    <a class="carousel-control-prev" href="#hole-carousel" role="button" data-bs-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#hole-carousel" role="button" data-bs-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>

<div class="container">
  <div class="row">
    <button>Submit</button>
    <input type="hidden" name="courseId" value="<%= course._id %>" hidden>
    <input type="hidden" name="time" value="<%= time.id %>" hidden>
  </div>
</div>
</form>
</section>

<%- include('../partials/footer') %>