<%- include('../partials/header') %>

<br>

<form method="GET" action="/times/new">
  <% if (user.email === 'curtissalcedo@gmail.com') { %>
    <button type="submit">ADD TEE TIME</button>
  <% } %>
</form>

<table id="time-table">
  <thead>
    <tr>
      <th>Course</th>
      <th>Date</th>
      <th>Time</th>
      <th>Group Size</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% times.forEach(function(t) { %>
      <tr>
        <td><%= t.course %></td>
        <td><%= t.date  %></td>
        <td><%= t.time  %></td>
        <td><%= t.groupSize  %></td>
        <td><a href="/times/<%= t._id %>">DETAILS</a></td>
      </tr>
      <% }); %>
    </tbody>
  </table>

<%- include('../partials/footer') %>