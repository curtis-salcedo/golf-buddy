<%- include('../partials/header') %>

<form id="add-tee-time" method="GET" action="/times/new">
  <% if (user.email === 'curtissalcedo@gmail.com') { %>
    <button type="submit">ADD TEE TIME</button>
  <% } %>
</form>
<section id="time-index">
  
  <table id="time-table">
    <thead>
    <tr>
      <th>Course</th>
      <th>Date</th>
      <th>Time</th>
      <th>Group Size</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% times.forEach(function(t) { %>
      <tr>
        <td><%= t.course.courseName %></td>
        <td><%= t.date.toDateString() %></td>
        <td><%= t.time %></td>
        <td><%= t.groupSize  %></td>
        <td><a href="/times/<%= t._id %>">DETAILS</a></td>
      </tr>
      <% }); %>
    </tbody>
  </table>
  

</section>

<%- include('../partials/footer') %>